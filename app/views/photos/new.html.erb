<section class="flex body-font">
  <div class="container mx-auto flex justify-center items-center mb-8">
    <div class="lg:w-2/6 md:w-1/2 bg-gray-100 rounded-lg p-8 flex flex-col w-md mt-10 md:mt-0 lg:m-10 md:mt-10">
      <h2 class="text-gray-900 text-2xl font-medium title-font mb-5">新規投稿</h2>

      <%= form_with model: @photo, local: true do |f| %>
      <div class="relative mb-4">
      　<%= f.file_field :image, class: "" %><br>
      </div>
      <div class="relative mb-4">
        <%= f.label :投稿文, class: "leading-7 text-sm text-gray-600" %><br />
        <%= f.text_area :caption, autofocus: true, class: "w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %><br />
      </div>
      <div class="relative mb-4">
        <%= f.submit "Create", class: "btn btn-accent" %>
      </div>
      <% end %>

    </div>
  </div>
</section>