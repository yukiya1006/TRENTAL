<div id="chats" class="h-screen w-screen">
<div class="text-center"><%="#{@chat.user.name}さんとのチャット"%></div>
<% @chats.each do |chat| %>
  <% if chat.is_trainer %>
  <%= chat.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
      <div class="mycomment flex justify-end">
        <p><%=chat.message%></p>
        <%= image_tag chat.trainer.image, class: "h-12 w-12 rounded-full shadow-2xl" %>
      </div>
  <% else %>
    <div class="fukidasi">
      <div class="faceicon">
        <%= image_tag chat.user.image %>
      </div>
      <div class="chatting">
        <div class="says">
          <p><%=chat.message%></p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
<div class=" text-center">
  <%= form_with model: @chat, url: trainer_chats_path(@room.id), method: :post do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
  <%= f.hidden_field :user_id %>
  <%= f.submit "送信", class: "btn btn-info btn-xs" %>
 <% end %>
</div>
</div>
