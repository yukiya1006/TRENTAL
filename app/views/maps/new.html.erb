<div class="absolute inset-x-0">
  <div id='map' class="opacity-50 absolute inset-x-0"></div>
  <%= render 'maps/map', maps: @maps %>
  <div class="container px-5 py-24 mx-auto flex h-screen">
    <div class="lg:w-1/3 md:w-1/2 sm:w-1/2 lg:h-1/3 md:h-1/3 sm:h-1/3 bg-white rounded-lg p-8 flex flex-col md:ml-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
      <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">活動エリアを登録してみましょう</h2>
      <p class="leading-relaxed mb-5 text-gray-600">※必ず●●駅までご入力ください<p>
      <div class="relative mb-4">
        <%= form_for(@map, :url => { controller:'maps', action:'create'})do |f| %>
        <%= f.label :駅名 %>
        <%= f.text_field :address, placeholder: "例: 渋谷駅", class: "w-full bg-white rounded border border-gray-300 py-1 px-3" %>
        <%= f.label :料金設定 %>
        <%= f.text_field :body, placeholder: "例: １時間/５０００円", class: "w-full bg-white rounded border border-gray-300 py-1 px-3" %>
      　<%= f.submit "Create", class: "mt-4 text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" %>
    　　<% end %>
      </div>
    </div>
  </div>
</div>