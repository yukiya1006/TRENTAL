      <li class="ml-5">
        <%= link_to "Login", new_user_session_path %>
      </li>
      <li class="flex">
        <svg class="h-5 w-5 text-purple-500 my-auto"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <circle cx="9" cy="7" r="4" />  <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />  <path d="M16 11h6m-3 -3v6" /></svg>
        <%= link_to "トレーナー登録", new_trainer_registration_path %>
      </li>
      <li class="ml-5">
        <%= link_to "Login", new_trainer_session_path %>
      </li>
      <% end %>
