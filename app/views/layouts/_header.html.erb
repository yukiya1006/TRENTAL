  <div class="flex">
      <a class="flex title-font font-medium items-center text-gray-900 md:mb-0" href="/">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full" viewBox="0 0 24 24">
        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
      </svg>
      <span class="ml-3 text-xl">TRENTAL</span>
      </a>
		<input id="menu-checkbox" type="checkbox" />
		  <label class="menu-btn my-auto ml-auto" for="menu-checkbox">
			  <i class="fas fa-bars"></i>
		  </label>
	<div class="nav-content">
		<input id="menu-checkbox" type="checkbox" />
		<label class="menu-btn" for="menu-checkbox">
		  <i class="fas fa-times"></i>
		</label>
	  <nav class="nav-menu">
			<ul>
			<% if user_signed_in? %>
      <% if current_user.present? %>
			<p class="text-center">Welcome to <%= current_user.name %>！</p>
      <% end %>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "トレーナーを探す", trainers_path %>
      </li>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "マイページ", user_path(current_user) %>
      </li>
       <li class="mr-5 hover:text-gray-900">
        <%= link_to "チャット履歴", chats_path %>
      </li>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "お気に入り", user_followings_path(current_user) %>
      </li>
       <li class="mr-5 hover:text-gray-900">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
      <% elsif trainer_signed_in? %>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "マイページ", trainer_path(current_trainer) %>
      </li>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "チャット履歴", trainer_chats_path %>
      </li>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "ジムを登録", new_map_path %>
      </li>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "ログアウト", destroy_trainer_session_path, method: :delete %>
      </li>
      <% elsif admin_signed_in? %>
      <li class="mr-5 hover:text-gray-900">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
