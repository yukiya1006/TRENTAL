<div class="grid grid-rows-3 grid-flow-col sm:grid-col-1 bg-gray-200 py-4">
  <!--写真col-->
    <div class="row-span-3 col-span-2 mx-auto my-auto text-center">
      <%= @trainer.name %>
      <% if @trainer.image.attached? %>
        <%= image_tag @trainer.image, size:'200x200', class: "rounded-full mt-2" %>
      <% else %>
        <%= image_tag ("noimage.jpg"), size: '200x200', class: "rounded-full mt-2" %>
      <% end %>

      <div class="flex justify-center mt-2 gap-5">
        <div>
          <% if @trainer == current_trainer %>
           <button class="btn btn-accent">
          <%= link_to 'Edit', edit_trainer_path(@trainer) %>
           </button>
          <% elsif user_signed_in? %>
           <button class="btn btn-accent">
          <%= link_to "Chat", chat_path(@trainer.id) %>
          </button>
          <% else %>
          <% end %>
      </div>

      <% if user_signed_in? %>
      <div>
          <% if user_signed_in? %>
          <% if current_user.following?(@trainer) %>
          <button class="btn btn-primary">
            <%= link_to "Unfollow", trainer_unfollow_path(@trainer.id), method: :delete %>
          </button>
          <% else %>
          <button class="btn btn-secondary">
            <%= link_to "Follow", trainer_follow_path(@trainer.id), method: :post %>
          </button>
          <% end %>
          <% end %>
      </div>
      <% end %>
      </div>
    </div>

    <!--プロフィールcol-->
    <div class="row-span-2 col-span-2 my-auto">
      <%= @trainer.email %><br>
      <%= @trainer.age %><br>
      <%= @trainer.gender %><br>
      <%= @trainer.activity_area %><br>

    </div>
    <div class="row-span-1 col-span-2">
      <%= @trainer.biography %>
    </div>
</div>

