<div class="grid grid-rows-3 grid-flow-col sm:grid-col-1 bg-gray-200 py-4">
  <!--写真col-->
    <div class="row-span-3 col-span-2 mx-auto my-auto text-center">
      <%= @trainer.name %>
      <% if @trainer.image.attached? %>
        <%= image_tag @trainer.image, size:'100x150', class: "rounded-full mt-2" %>
      <% else %>
        <%= image_tag ("noimage.jpg"), size: '100x100', class: "rounded-full mt-2" %>
      <% end %>

      <div class="flex justify-center mt-2 gap-5">

      <div>
          <% if user_signed_in? %>
          <% if current_user.liking?(@trainer) %>
          <button class="btn btn-circle btn-error">
            <%= link_to trainer_dislike_path(@trainer.id), method: :delete do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
               <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
              </svg>
            <% end %>
          </button>
          <% else %>
          <button class="btn btn-circle">
            <%= link_to trainer_like_path(@trainer.id), method: :post do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
              </svg>
            <% end %>
          </button>
          <% end %>
          <% end %>
      </div>

      <% if user_signed_in? %>
      <div>
          <% if user_signed_in? %>
          <% if current_user.following?(@trainer) %>
          <button class="btn btn-primary">
            <%= link_to "Unfollow", trainer_unfollow_path(@trainer.id), method: :delete %>
          </button>
          <% else %>
          <button class="btn btn-secondary">
            <%= link_to "Follow", trainer_follow_path(@trainer.id), method: :post %>
          </button>
          <% end %>
          <% end %>
      </div>
      <% end %>
      </div>
    </div>

    <!--プロフィールcol-->
    <div class="row-span-2 col-span-2 my-auto">
      <%= @trainer.email %><br>
      <%= @trainer.age %><br>
      <%= @trainer.gender %><br>
      <%= @trainer.activity_area %><br>
      Good <%= @trainer.likers.count %>

    </div>
    <div class="row-span-1 col-span-2">
      <%= @trainer.biography %>
    </div>
</div>

