<div class="grid grid-cols-1 bg-gray-600 bg-opacity-75 text-gray-100" style="padding-bottom: 189px;">
  <div class="">
    <% unless trainer_signed_in? %>
    <div class="py-2 px-8">
      <%= link_to "検索画面へ戻る",  trainers_path %>
    </div>
    <% end %>
        <div class="group h-96 flex items-end justify-center rounded-lg overflow-hidden shadow-lg relative p-4">
          <% if @trainer.image.attached? %>
            <%= image_tag @trainer.image, class: "w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 transition duration-200 rounded-lg shadow-lg" %>
          <% else %>
            <%= image_tag ("noimage.jpg"), class: "w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 transition duration-200 rounded-lg shadow-lg" %>
          <% end %>
        <div class="w-full flex flex-col bg-white text-center rounded-lg relative p-4 text-gray-900">
          <%= @trainer.name %>
          <%= @trainer.activity_area %>
          <%= @trainer.gender %>
          <%= @trainer.age %>
        </div>
        <div class="absolute top-0 right-0 pr-6">
          <%= pie_chart @date, colors: ["#99FFFF", "#FFBEDA"], donut: true , width: "82px", height: "150px", legend: false  %>
        </div>
        </div>

        <div class="flex justify-center my-2 gap-5 mb-6">
          <div>
            <% if user_signed_in? %>
              <%= link_to "Chat", chat_path(@trainer.id), class: "btn btn-accent" %>
            <% else %>
            <% end %>
          </div>

          <div id="follow_buttons">
           <%= render 'relationships/follow', trainer: @trainer %>
          </div>

          <div class="flex gap-4">
            <% if user_signed_in? %>
            <div id="like_buttons">
              <%= render 'like_relationships/like', trainer: @trainer %>
            </div>
            <% end %>

            <% if user_signed_in? %>
              <div id="bad_buttons">
                <%= render 'bad_relationships/bad', trainer: @trainer %>
              </div>
            <% end %>
          </div>
        </div>




        <table class="table-auto mx-auto">
          <tbody>
            <tr>
              <td class="px-4 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
              </td>
              <td class="px-4 py-2">トレーニング歴</td>
              <td class="px-4 py-2"><%= @trainer.training_history %></td>
            </tr>
            <tr>
              <td class="px-4 py-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
              </svg>
            </td>
            <td class="px-4 py-2">指導歴</td>
            <td class="px-4 py-2"><%= @trainer.teaching_history %></td>
            </tr>
            <tr>
            <td class="px-4 py-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
              </svg>
            </td>
            <td class="px-4 py-2">保有資格</td>
            <td class="px-4 py-2"><%= @trainer.qualification %></td>
            </tr>
            <tr>
              <td class="px-4 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
              </td>
              <td class="px-4 py-2">セッション料</td>
              <td class="px-4 py-2"><%= @trainer.session_fee%>~</td>
            </tr>
            <tr>
              <td class="px-4 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              </td>
              <td class="px-4 py-2">得意な部位</td>
              <td class="px-4 py-2"><%= @trainer.strong_part %></td>
            </tr>
             <tr>
              <td class="px-4 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-.464 5.535a1 1 0 10-1.415-1.414 3 3 0 01-4.242 0 1 1 0 00-1.415 1.414 5 5 0 007.072 0z" clip-rule="evenodd" />
                </svg>
              </td>
              <td class="px-4 py-2 text-red-400">BOOD</td>
              <td class="px-4 py-2"><%= @trainer.likers.count %></td>
            </tr>
            <tr>
              <td class="px-4 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-7.536 5.879a1 1 0 001.415 0 3 3 0 014.242 0 1 1 0 001.415-1.415 5 5 0 00-7.072 0 1 1 0 000 1.415z" clip-rule="evenodd" />
                </svg>
              </td>
              <td class="px-4 py-2 text-blue-400">BAD</td>
              <td class="px-4 py-2"><%= @trainer.baders.count %></td>
            </tr>
            <tr>
              <td class="px-4 py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                </svg>
              </td>
              <td class="px-4 py-2">フォロアー</td>
              <td class="px-4 py-2"><%= @trainer.followers.count %></td>
              <td>
                <% if @trainer == current_trainer %>
                <%= link_to '編集', edit_trainer_path(@trainer), class: "btn btn-accent text-gray-100" %>
                <%= link_to '退会', trainer_unsubscribe_path(@trainer) , class: "btn btn-primary" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        　  <div class="text-center py-4"><span class="text-xl">紹介文</span><br>
        <div class="content-body">
          <p><%= @trainer.biography %></p>
        </div>
      </div>
      </div>

      <div class="area-2 col-span-2">
        <div class="grid grid-cols-3 gap-2">
          <% @photos. each do |photos| %>
          <% if trainer_signed_in? && photos.trainer.id == current_trainer.id %>
          <% if photos.image.attached? %>
            <%= link_to edit_photo_path(photos.id) do %>
            <%= image_tag photos.image, class: "rounded-md w-full h-full" %>
            <% end %>
          <% end %>
          <% else %>
            <%= image_tag photos.image, class: "rounded-md w-full h-full" %>
          <% end %>
          <% end %>
        </div>
      </div>
</div>

<script>
  $('.see-more').click(function(){
  $(this).closest(".content-body").find(".truncated").hide();
  $(this).closest(".content-body").find(".untruncated").show();
  })
</script>


