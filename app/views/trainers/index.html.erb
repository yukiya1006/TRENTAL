<div class="text-4xl text-center pt-4">Trainers</div>

<div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-x-4 lg:gap-x-8 gap-y-6 sm:gap-y-8 lg:gap-y-12">

<div class="relative inset-x-0 bottom-0">
<!--<div class="py-4">マップからも検索可能です！</div>-->
<div id='map' class="opacity-25 bg-gray-500"></div>
<%= render 'maps/map' %>
</div>

<div class="flex flex-col sm:flex-row items-center gap-2 md:gap-4">
  <div class="grid grid-cols-2 sm:grid-cols-2 md:col-span-2 md:grid-cols-4 gap-4 lg:gap-20 mx-auto">
    <% @trainer.each do |trainer| %>
    <div class="overflow-hidden">
      <% if trainer.image.attached? %>
        <%= link_to trainer_path(trainer.id) do %>
          <!--mx-autoでイメージを中央に配置-->
        <%= image_tag trainer.image, size:'100x100', class: "rounded-full overflow-hidden mx-auto mt-8" %>
        <% end %>
      <% else %>
        <%= link_to trainer_path(trainer.id) do %>
          <%= image_tag ("noimage.jpg"), size: '100x100', class: "rounded-full overflow-hidden mx-auto mt-8 shadow-lg" %>
        <% end %>
      <% end %>
        <div class="text-center md:text-left">
          <h2 class="text-lg"><%= trainer.name %></h2>
          <div class="text-purple-500"><%= trainer.age %></div>
          <div class="text-gray-600"><%= trainer.activity_area %></div>
        </div>
    </div>
    <% end %>
  </div>
</div>
</div>